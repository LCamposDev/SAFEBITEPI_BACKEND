{
  "name": "safebitepi-backend",
  "version": "1.0.0",
  "description": "Backend da aplicação SafeBite - Plataforma de receitas com foco em restrições alimentares",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "migrate": "node src/config/migrate.js",
    "seed": "node src/config/seed.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "check": "npm run lint && npm run format:check",
    "test:db": "node src/config/test-db.js",
    "test:auth": "node tests/test-auth.js",
    "test:protected": "node tests/test-protected-route.js",
    "test:password-reset": "node tests/test-password-reset.js",
    "generate:jwt-secret": "node scripts/generate-jwt-secret.js",
    "check:env": "node scripts/check-env.js"
  },
  "keywords": [
    "recipes",
    "restrictions",
    "food",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
